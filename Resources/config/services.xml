<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.twitter_oauth" class="Integrated\Bundle\SocialBundle\Social\Twitter\Oauth">
            <argument key="twitter_consumer_key">%twitter_consumer_key%</argument>
            <argument key="twitter_consumer_key_secret">%twitter_consumer_key_secret%</argument>
            <argument type="service" id="session"/>
            <argument type="service" id="request_stack"/>
        </service>

        <service id="app.facebook_oauth" class="Integrated\Bundle\SocialBundle\Social\Facebook\Oauth">
            <argument key="facebook_app_id">%facebook_app_id%</argument>
            <argument key="facebook_app_id_secret">%facebook_app_id_secret%%</argument>
            <argument type="service" id="request_stack"/>
        </service>
    </services>
</container>
